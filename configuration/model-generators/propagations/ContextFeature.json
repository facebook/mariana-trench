{
  "model_generators": [
    {
      "find": "methods",
      "where": [
        {
          "constraint": "signature",
          "pattern": ".*:\\(.*Landroid/content/Context;.*\\).*"
        }
      ],
      "model": {
        "for_all_parameters": [
          {
            "variable": "x",
            "where": [
              {
                "constraint": "name",
                "pattern": "Landroid/content/Context;"
              }
            ],
            "attach_to_sources": [
              {
                "features": [
                  "via:context"
                ],
                "port": "Argument(x)"
              }
            ],
            "attach_to_sinks": [
              {
                "features": [
                  "via:context"
                ],
                "port": "Argument(x)"
              }
            ],
            "attach_to_propagations": [
              {
                "features": [
                  "via:context"
                ],
                "port": "Argument(x)"
              }
            ]
          }
        ]
      }
    }
  ]
}
